{
  "mappings": [
    {
      "request": {
        "method": "POST",
        "url": "/graphql",
        "bodyPatterns": [
          {
            "equalTo": "{\"query\":\"query greet($name: String!) {greeting:greet(name: $name)}\",\"variables\":{\"name\":\"John\"}}"
          }
        ],
        "headers": {
          "Content-Type": {
            "equalTo": "application/json"
          }
        }
      },
      "response": {
        "status": 200,
        "body": "{\n    \"data\": {\n        \"greeting\": \"Hello John\"\n    }\n}",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  ]
}